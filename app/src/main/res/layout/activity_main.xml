<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:text="@string/Question"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="52dp"
        android:background="@color/light_red"
        android:text="Port-au-Prince"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_extra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer"
        android:layout_marginTop="29dp"
        android:background="@color/light_red"
        android:text="Mirbalais"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_extra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_extra1"
        android:layout_marginTop="30dp"
        android:background="@color/light_red"
        android:text="Jacmel"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/myBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/plus_circle" />

    <TextView
        android:id="@+id/flashcard_extra3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_extra2"
        android:layout_marginTop="29dp"
        android:background="@color/light_red"
        android:text="Cap-Haitien"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>